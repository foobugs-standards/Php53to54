{
    "name": "foobugs-standards/php53to54",
    "description": "PHP_CodeSniffer standard for compatibility checking of PHP 5.3 to 5.4 migrations.",
    "type": "phpcs-standard",
    "keywords": [
        "phpcs",
        "PHP_CodeSniffer",
        "standards",
        "sniff",
        "php5.3",
        "php5.4",
        "compatibility",
        "migration",
        "tool",
        "static",
        "analysis"
    ],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Marcel Eichner",
            "email": "marcel.eichner@foobugs.com",
            "homepage": "http://www.marceleichner.de",
            "role": "Developer"
        },
        {
            "name": "Maik Penz",
            "email": "maik.penz@foobugs.com",
            "role": "Developer"
        },
        {
            "name": "Rene Oelke",
            "email": "rene.oelke@foobugs.com",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/foobugs-standards/php53to54",
    "support": {
        "issues": "https://github.com/foobugs-standards/php53to54/issues",
        "source": "https://github.com/foobugs-standards/php53to54"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/foobugs-standards/PHP_CodeSniffer"
        }
    ],
    "require": {
        "php": ">=5.3",
        "goatherd/phpcs_installer": "*"
    },
    "autoload": {
        "psr-0": { "PHP53to54\\": "./" }
    },
    "extra": {
        "phpcs-standard": "php53to54"
    },
    "require-dev": {
        "phpunit/phpunit": "3.*"
    },
    "scripts": {
        "post-install-cmd": [
            "rm -f vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/php53to54/*",
            "rm -df vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/php53to54",
            "mkdir vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/php53to54",
            "ln -s ${PWD}/ruleset.xml vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/php53to54/ruleset.xml",
            "ln -s ${PWD}/Sniffs vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/php53to54/Sniffs",
            "ln -s ${PWD}/AbstractSniff.php vendor/squizlabs/php_codesniffer/CodeSniffer/Standards/php53to54/AbstractSniff.php"
        ]
    }
}
